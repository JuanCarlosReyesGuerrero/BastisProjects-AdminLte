@model Bastis.Models.Entities.Menu

@{
    ViewBag.Title = "General";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>
            Editando Menus
            <small>Configuración</small>
        </h1>
        <ol class="breadcrumb">
            <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
            <li><a href="#">Configuración</a></li>
            <li class="active">Menus</li>
        </ol>
    </section>
    <!-- Main content -->
    <section class="content">
        <div class="row">
            <!-- left column -->
            <div class="col-md-6">
                <!-- general form elements -->
                <div class="box box-primary">
                    <div class="box-header with-border">
                        <i class="fa fa-fw fa-thumb-tack"></i>
                        <h3 class="box-title">Editando Menu </h3>
                    </div>
                    <!-- /.box-header -->
                    <!-- form start -->
                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()

                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        @Html.HiddenFor(model => model.MenuID)
                        <div class="box-body">
                            <div class="form-group">
                                @Html.LabelFor(model => model.DisplayName, htmlAttributes: new { @class = "" })
                                @Html.EditorFor(model => model.DisplayName, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.DisplayName, "", new { @class = "text-danger" })
                            </div>
                            <div class="form-group">
                                @Html.LabelFor(model => model.ParentMenuID, htmlAttributes: new { @class = "" })
                                @Html.EditorFor(model => model.ParentMenuID, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.ParentMenuID, "", new { @class = "text-danger" })
                            </div>

                            <div class="form-group">
                                @Html.LabelFor(model => model.OrderNumber, htmlAttributes: new { @class = "" })
                                @Html.EditorFor(model => model.OrderNumber, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.OrderNumber, "", new { @class = "text-danger" })
                            </div>

                            <div class="form-group">
                                @Html.LabelFor(model => model.MenuURL, htmlAttributes: new { @class = "" })
                                @Html.EditorFor(model => model.MenuURL, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.MenuURL, "", new { @class = "text-danger" })
                            </div>

                            <div class="form-group">
                                @Html.LabelFor(model => model.MenuIcon, htmlAttributes: new { @class = "" })
                                @Html.EditorFor(model => model.MenuIcon, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.MenuIcon, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <!-- /.box-body -->

                        <div class="box-footer">
                            @Html.ActionLink("Regresar", "Index", "", new { @class = "btn btn-default btn-large" })
                            <input type="submit" value="Guardar" class="btn btn-primary btn-large" />
                        </div>
                    }

                </div>
            </div>
            <!--/.col (left) -->
        </div>
        <!-- /.row -->
    </section>
    <!-- /.content -->
</div>
<!-- /.content-wrapper -->


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}