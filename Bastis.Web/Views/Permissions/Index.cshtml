@model IEnumerable<Bastis.Models.Entities.Permission>

@{
    ViewBag.Title = "Data";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>
            Data Tables
            <small>advanced tables</small>
        </h1>
        <ol class="breadcrumb">
            <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
            <li><a href="#">Tables</a></li>
            <li class="active">Data tables</li>
        </ol>
    </section>
    <!-- Main content -->
    <section class="content">
        <div class="row">
            <div class="col-xs-12">
                <!-- /.box -->
                <div class="box">
                    <div class="box-header">
                        @*<h3 class="box-title">Data Table With Full Features</h3>*@
                        <p>
                            @Html.ActionLink("Crear nuevo", "Create", "Permissions", null, new { @class = "btn btn-primary btn-large" })
                        </p>
                    </div>
                    <!-- /.box-header -->
                    <div class="box-body">
                        <table id="example1" class="table table-bordered table-striped">
                            <thead>
                                <tr>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Menu.DisplayName)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.RoleID)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.ViewMenu)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.CreateOption)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.ReadOption)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.UpdateOption)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.DeleteOption)
                                    </th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>

                                @foreach (var item in Model)
                                {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Menu.DisplayName)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.RoleID)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.ViewMenu)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.CreateOption)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.ReadOption)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.UpdateOption)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.DeleteOption)
                                    </td>

                                    <td>
                                        <a href="@Url.Action("Edit", "States", new { id = item.PermissionID })" class="btn btn-primary btn-xs"><span class="glyphicon glyphicon-pencil"></span></a>

                                        <a href="@Url.Action("Details", "States", new { id = item.PermissionID })" class="btn btn-success btn-xs"><span class="glyphicon glyphicon-list-alt"></span></a>

                                        <a href="@Url.Action("Delete", "States", new { id = item.PermissionID })" class="btn btn-danger btn-xs"><span class="glyphicon glyphicon-trash"></span></a>
                                    </td>

                                </tr>
                                }

                            </tbody>
                            <tfoot>
                                <tr>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Menu.DisplayName)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.RoleID)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.ViewMenu)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.CreateOption)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.ReadOption)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.UpdateOption)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.DeleteOption)
                                    </th>
                                    <th></th>
                                </tr>
                            </tfoot>
                        </table>
                    </div>
                    <!-- /.box-body -->
                </div>
                <!-- /.box -->
            </div>
            <!-- /.col -->
        </div>
        <!-- /.row -->
    </section>
    <!-- /.content -->
</div>
<!-- /.content-wrapper -->
@section Scripts
{
    <script type="text/javascript">
        $(document).ready(function () {
            $('#example1').DataTable()
            $('#example2').DataTable({
                'paging': true,
                'lengthChange': false,
                'searching': false,
                'ordering': true,
                'info': true,
                'autoWidth': false
            })
        })</script>

}


