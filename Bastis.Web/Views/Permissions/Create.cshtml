@model Bastis.Models.Entities.Permission

@{
    ViewBag.Title = "General";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>
            Creando Permisos
            <small>Configuración</small>
        </h1>
        <ol class="breadcrumb">
            <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
            <li><a href="#">Configuración</a></li>
            <li class="active">Permisos</li>
        </ol>
    </section>
    <!-- Main content -->
    <section class="content">
        <div class="row">
            <!-- left column -->
            <div class="col-md-6">
                <!-- general form elements -->
                <div class="box box-primary">
                    <div class="box-header with-border">
                        <i class="fa fa-fw fa-thumb-tack"></i>
                        <h3 class="box-title">Creación Permiso </h3>
                    </div>
                    <!-- /.box-header -->
                    <!-- form start -->
                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()

                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                        <div class="box-body">
                            <div class="form-group">
                                @Html.LabelFor(model => model.ApplicationRoleId, htmlAttributes: new { @class = "" })
                                @Html.DropDownList("ApplicationRoleId", null, htmlAttributes: new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.ApplicationRoleId, "", new { @class = "text-danger" })
                            </div>
                            <div class="form-group">
                                @Html.LabelFor(model => model.MenuID, "MenuID", htmlAttributes: new { @class = "" })
                                @Html.DropDownList("MenuID", null, htmlAttributes: new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.MenuID, "", new { @class = "text-danger" })
                            </div>

                            <div class="form-group">
                                <div class="checkbox">
                                    <label>
                                        @Html.EditorFor(model => model.ViewMenu)  @Html.LabelFor(model => model.ViewMenu, htmlAttributes: new { @class = "" })
                                        @Html.ValidationMessageFor(model => model.ViewMenu, "", new { @class = "text-danger" })
                                    </label>
                                </div>
                            </div>

                            <div class="form-group">
                                <div class="checkbox">
                                    <label>
                                        @Html.EditorFor(model => model.CreateOption)  @Html.LabelFor(model => model.CreateOption, htmlAttributes: new { @class = "" })
                                        @Html.ValidationMessageFor(model => model.CreateOption, "", new { @class = "text-danger" })
                                    </label>
                                </div>
                            </div>

                            <div class="form-group">
                                <div class="checkbox">
                                    <label>
                                        @Html.EditorFor(model => model.ReadOption)  @Html.LabelFor(model => model.ReadOption, htmlAttributes: new { @class = "" })
                                        @Html.ValidationMessageFor(model => model.ReadOption, "", new { @class = "text-danger" })
                                    </label>
                                </div>
                            </div>

                            <div class="form-group">
                                <div class="checkbox">
                                    <label>
                                        @Html.EditorFor(model => model.UpdateOption)  @Html.LabelFor(model => model.UpdateOption, htmlAttributes: new { @class = "" })
                                        @Html.ValidationMessageFor(model => model.UpdateOption, "", new { @class = "text-danger" })
                                    </label>
                                </div>
                            </div>

                            <div class="form-group">
                                <div class="checkbox">
                                    <label>
                                        @Html.EditorFor(model => model.DeleteOption)  @Html.LabelFor(model => model.DeleteOption, htmlAttributes: new { @class = "" })
                                        @Html.ValidationMessageFor(model => model.DeleteOption, "", new { @class = "text-danger" })
                                    </label>
                                </div>
                            </div>
                        </div>
                        <!-- /.box-body -->

                        <div class="box-footer">
                            @Html.ActionLink("Regresar", "Index", "", new { @class = "btn btn-default btn-large" })
                            <input type="submit" value="Guardar" class="btn btn-primary" />
                        </div>
                    }

                </div>
            </div>
            <!--/.col (left) -->
        </div>
        <!-- /.row -->
    </section>
    <!-- /.content -->
</div>
<!-- /.content-wrapper -->


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}